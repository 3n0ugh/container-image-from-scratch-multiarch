cat << EOF > output-image/config.json
{
    "architecture": "${arch}",
    "os": "${os}",
    "config": {
        "Env": [
            "PATH=${path}"
        ],
        "WorkingDir": "/",
        "Entrypoint": [ "${entrypoint}" ]
    },
    "rootfs": {
        "type": "layers",
        "diff_ids": [
            "sha256:${layer_checksum}"
        ]
    }
}
EOF
